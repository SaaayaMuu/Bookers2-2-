
<%= render 'books/newbook', book: @book %>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td> 
            <%= link_to user_path(@user.id) do %>
              <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size:"100x100" %>
              <% else %>
              <%= image_tag 'no_image', size:"100x100" %>
              <% end %><br>
              <%= @user.name %>
            <% end %>  
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to edit_book_path, class: "btn btn-sm btn-success" do %>edit
            <% end %>
          </td>
          <td>
            <%= link_to book_path, method: :delete, class: "btn btn-sm btn-danger" do %>Destroy
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>   
   
   
</div>
</div>