  <div class="container mt-4">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
          <% if @book.errors.any? %>
           <h2><%= @book.errors.count %>error prohibited this book from being saved</h2>
           <ul>
              <% @book.errors.full_messages.each do |message| %>
               <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
        
        <div class="form-group">
          <label for="book_Title">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"book_Title", placeholder: "Title"%>
        </div>
        
        <div class="form-group">
        <label for="book_Body">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"book_Body", placeholder: "Opinion" %>
        </div>
        
        <div class="action">
          <%= f.submit 'Update Book', method: :patch, class: "btn btn-sm btn-success" %>
          <% end %>
        </div>
        <br>
        <%= link_to "Show", book_path %>
        <span> | </span>
        <%= link_to "Back", books_path %>
        
      </div>
    </div>
  </div>