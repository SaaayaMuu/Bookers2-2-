  
  <h2>User info</h2>
  
  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
  
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>  
  
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :Introduct, autofocus: true, id:"inputIntroduction", placeholder: "Introduction" %>
  
  
  <%= f.submit 'User updata' %>
  
  <% end %>
